<h1>Log In</h1>

<%= form_with url: sessions_path, local: true do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :remember_me %><br />
    <%= f.check_box :remember_me %>
  </div>

  <div class="field">
    <%= link_to 'forgot password?', new_password_reset_path %>
  </div>

  <div class="actions"><%= f.submit "Log In", data: { "disable-with": "Logging in..." } %></div>
<% end %>
